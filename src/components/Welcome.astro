import List from "./List.astro"
import Role from "./Role.astro"
import Title from "./Title.astro"
import Fonts from "./Fonts.astro";

const fonts = "crimson, jakarta, inter, roboto, notoserif, ibmplex, poppins, robotomono, jbmono, courierprime, sourceserif, newsreader, bahn, robotocondensed";
---

<div class="w-[210mm] bg-bg ring-1 ring-black/5 shadow-2xl rounded-xl p-8 ">
	<main class="max-w-[180mm]">

		<div class="flex items-center justify-between">
			<h1 class="text-4xl font-bold ibm-plex-serif-bold">Tarquell</h1>
			<ul class="flex gap-4">
				<li><a href="mailto:tarquell@outlook.com">tarquell@outlook.com</a></li>
				<li>+44 7710 975 666</li>
				<li><a href="https://linkedin.com/in/bardwelltk">linkedin.com/in/bardwelltk</a></li>
				<li><a href="https://github.com/tarquell">github.com/tarquell</a></li>

			</ul>
		</div>
		<p class="mb-2">A Full-Stack Engineer with 6 years of experience, designing software, systems, and two years of leading teams. Deeply enthusiastic about building beautiful, functional, and performant tools.</p>

		<div class="grid grid-cols-[max-content_minmax(0,1fr)] gap-x-4 gap-y-0">

			<List title="Languages" list="Go, React, Python, C++, TypeScript/Node, Bash, SQL"/>

			<!-- Projects (section header spans both cols, controlled spacing above) -->
